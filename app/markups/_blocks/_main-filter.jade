                input.slider__input(type="text" name="min" qtip-position="top" qtip-content-motnumber="только цифры" qtip-content-leftout="значение меньше левого края диапазона" qtip-content-rightout="значение больше правого края диапазона")
              .slider__input-wrapper.slider__input-wrapper-max
                span.slider__pre до
                input.slider__input(type="text" name="max" qtip-position="top" qtip-content-motnumber="только цифры" qtip-content-leftout="значение меньше левого края диапазона" qtip-content-rightout="значение больше правого края диапазона")  
            .slider__slide(data-minVal="1990" data-maxVal="6000" data-minRange="0" data-maxRange="23000")   
